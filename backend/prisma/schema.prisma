generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      UserRole   @default(USER)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model SiteSettings {
  id                   String   @id @default("settings")
  heroBadge            String?
  heroTitle            String
  heroSubtitle         String
  heroImage            String?
  aboutHeading         String?
  aboutText            String?
  portfolioTitle       String?
  portfolioSubtitle    String?
  portfolioDescription String?
  testimonialTitle     String?
  testimonialSubtitle  String?
  ctaTitle             String
  ctaSubtitle          String
  contactEmail         String?
  contactPhone         String?
  address              String?
  socialLinks          Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  aboutImage1          String?
  aboutImage2          String?
  brandLogo            String?
  brandSubtitle        String?
  privacyPolicyHtml    String?
  termsHtml            String?
}

model AboutPage {
  id                    String   @id @default("about")
  heroTitle             String
  heroSubtitle          String
  storyTitle            String?
  storyContent          String?
  vision                String?
  mission               String?
  yearsExperience       Int?
  heroImage             String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  values                Json?
  valuesSectionSubtitle String?
  valuesSectionTitle    String?
  heroBadge             String?
  storyBadge            String?
}

model Stat {
  id        String   @id @default(cuid())
  label     String
  value     String
  page      StatPage
  order     Int
  createdAt DateTime @default(now())
}

model Event {
  id          String         @id @default(cuid())
  title       String
  description String
  category    String
  date        DateTime
  client      String
  coverImage  String
  featured    Boolean        @default(false)
  order       Int?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  gallery     GalleryImage[]
}

model GalleryImage {
  id        String   @id @default(cuid())
  imageUrl  String
  eventId   String?
  featured  Boolean  @default(false)
  highlight Boolean  @default(false)
  createdAt DateTime @default(now())
  event     Event?   @relation(fields: [eventId], references: [id])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  order     Int?
  createdAt DateTime @default(now())
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  message   String
  rating    Float?
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  eventType String?
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime      @default(now())
}

model PageHero {
  id        String   @id
  badge     String?
  title     String
  subtitle  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactPage {
  id         String   @id @default("contact")
  badge      String?
  title      String
  subtitle   String?
  email      String?
  phone      String?
  address    String?
  eventTypes Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  BLOCKED
}

enum StatPage {
  HOME
  ABOUT
  TESTIMONIALS
}

enum ContactStatus {
  NEW
  READ
  REPLIED
}
